{
  "name": "evogarden",
  "version": "1.0.0",
  "description": "A dynamic garden simulation where flowers evolve under the pressure of insects and birds. Watch a Darwinian battlefield unfold as flowers, insects, and birds interact in a delicate ecosystem, with visual traits driven by NEAT Algorithm.",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "buildGH": "tsc && vite build --base=/EvoGarden/",
    "preview": "vite preview",
    "show": "npx playwright show-report",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test e2e/app.spec.ts --update-snapshots"
  },
  "author": "Cristian Gonzalez <cristian.glez.m@gmail.com>",
  "license": "Apache-2.0",
  "dependencies": {
    "@cristianglezm/flower-evolver-wasm": "^3.0.0",
    "@react-three/drei": "^9.105.6",
    "@react-three/fiber": "^8.16.6",
    "echarts": "^6.0.0",
    "echarts-for-react": "^3.0.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "three": "^0.179.0",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.45.3",
    "@testing-library/jest-dom": "^6.4.6",
    "@testing-library/react": "^16.0.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/three": "^0.179.0",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.19",
    "jsdom": "^24.1.0",
    "postcss": "^8.4.38",
    "react-devtools": "^6.1.5",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.4.5",
    "vite": "^7.1.3",
    "vitest": "^3.2.4"
  }
}
