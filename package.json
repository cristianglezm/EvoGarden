{
  "name": "evogarden",
  "version": "1.0.0",
  "description": "A dynamic garden simulation where flowers evolve under the pressure of insects and birds. Watch a Darwinian battlefield unfold as flowers, insects, and birds interact in a delicate ecosystem, with visual traits driven by NEAT Algorithm.",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "buildGH": "tsc && vite build --base=/EvoGarden/",
    "preview": "vite preview",
    "show": "npx playwright show-report",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test e2e/app.spec.ts --update-snapshots"
  },
  "author": "Cristian Gonzalez <cristian.glez.m@gmail.com>",
  "license": "Apache-2.0",
  "dependencies": {
    "@cristianglezm/flower-evolver-wasm": "^3.0.0",
    "@react-three/drei": "^10.7.4",
    "@react-three/fiber": "^9.3.0",
    "echarts": "^6.0.0",
    "echarts-for-react": "^3.0.4",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "three": "^0.179.0",
    "zustand": "^5.0.8",
    "dexie": "^4.2.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.45.3",
    "@tailwindcss/vite": "^4.1.13",
    "@testing-library/jest-dom": "^6.4.6",
    "@testing-library/react": "^16.0.0",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "@types/three": "^0.179.0",
    "@vitejs/plugin-react": "^5.0.2",
    "@vitest/ui": "^3.2.4",
    "jsdom": "^26.1.0",
    "react-devtools": "^6.1.5",
    "tailwindcss": "^4.1.13",
    "typescript": "^5.4.5",
    "vite": "^7.1.3",
    "vitest": "^3.2.4"
  }
}
